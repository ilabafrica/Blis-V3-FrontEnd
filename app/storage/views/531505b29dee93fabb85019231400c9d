            <div class="panel-heading ">
                <span class="glyphicon glyphicon-user"></span>
                <?php echo Lang::choice('messages.permission', 2); ?>

                <div class="panel-btn">
                    <a class="btn btn-sm btn-info" href="<?php echo URL::to('role/create'); ?>">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                        <?php echo trans('messages.new-role'); ?>

                    </a>
                </div>
            </div>
            <div class="panel-body" >
            <?php echo Form::open(array('route'=>'permission.store')); ?>

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th><?php echo Lang::choice('messages.permission', 2); ?></th>
                        <th colspan="<?php echo count($roles); ?>"><?php echo Lang::choice('messages.role', 2); ?></th>
                    </tr>
                </thead>
                <tbody>
                <tr>
                    <td></td>
                    <?php $__empty_1 = true; foreach($roles as $role): $__empty_1 = false; ?>
                        <td><?php echo $role->name; ?></td>
                    <?php endforeach; if ($__empty_1): ?>
                        <td><?php echo trans('messages.no-roles-found'); ?></td>
                    <?php endif; ?>
                </tr>
                <?php $__empty_1 = true; foreach($permissions as $permissionKey => $permission): $__empty_1 = false; ?>
                    <tr>
                        <td><?php echo $permission->display_name; ?></td>
                        <?php $__empty_2 = true; foreach($roles as $roleKey => $role): $__empty_2 = false; ?>
                        <td>
                            <?php if($role == Role::getAdminRole()): ?>
                                <span class="glyphicon glyphicon-lock"></span>
                                <?php echo Form::checkbox('permissionRoles['.$permissionKey.']['.$roleKey.']', '1',
                                $permission->hasRole($role->name), array('style'=>'display:none') ); ?>

                            <?php else: ?>
                                <?php echo Form::checkbox('permissionRoles['.$permissionKey.']['.$roleKey.']', '1',
                                $permission->hasRole($role->name)); ?>

                            <?php endif; ?>
                            
                        </td>
                        <?php endforeach; if ($__empty_2): ?>
                            <td>[-]</td>
                        <?php endif; ?>
                    </tr>
                <?php endforeach; if ($__empty_1): ?>
                <tr><td colspan="2"><?php echo trans('messages.no-permissions-found'); ?></td></tr>
                <?php endif; ?> 
                </tbody>
            </table>
            <div class="form-group actions-row">
                    <?php echo Form::button("<span class='glyphicon glyphicon-save'></span> ".trans('messages.save'), 
                        array('class' => 'btn btn-primary', 'onclick' => 'submit()')); ?>

            </div>
            <?php echo Form::close(); ?>

        </div>
    </div>
